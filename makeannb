#/bin/bash
#
. ~/bin/colours

# make annotation  makeann fontsize in_pic 'annotation' out_pic 

if [[ -z $6 ]]; then
echo -e  "Usage \n ${BLUE}makeannb fontcolor fontsize vertposition  bgpic 'annotation' outpic ${NC}"
echo -e "Example\n ${BLUE}makeannb yellow 30 200 bg.png 'Lorem ipsum' out.png${NC} "
exit
fi

magick -fill $1 $4 -gravity North -pointsize $2 -font Noto-Serif-Bold -annotate +0+$3 "$5"  $6	
