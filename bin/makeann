#/bin/bash
#
. colours

# make annotation  makeann fontsize in_pic 'annotation' out_pic 
echo -e "${RED}Этот скрипт является устаревшим"
echo -e "используйте annotat ${NC}"


if [[ -z $6 ]]; then
echo -e  "Usage \n ${BLUE}makeann fontcolor fontsize vertposition  bgpic 'annotation' outpic ${NC}"
echo -e "Example\n ${BLUE}makeann yellow 30 200 bg.png 'Lorem ipsum' out.png${NC} "
exit
fi

magick -fill $1 $4 -gravity North -pointsize $2 -font Noto-Serif -annotate +0+$3 "$5"  $6	
